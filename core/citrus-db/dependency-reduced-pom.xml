      </exclusions>
    </dependency>
    <dependency>
      <groupId>org.mockito</groupId>
      <artifactId>mockito-junit-jupiter</artifactId>
      <version>4.5.0</version>
      <scope>test</scope>
    </dependency>
  </dependencies>
</project>
